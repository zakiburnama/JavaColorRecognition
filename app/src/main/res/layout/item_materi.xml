<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lll_item_materi"
    android:scaleX="0.75"
    android:scaleY="0.75"
    android:layout_margin="24dp"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_materi_content_photo"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="materi image"
            android:visibility="visible"
            android:scaleType="fitCenter"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_materi_content_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Tittle" />

        <TextView
            android:id="@+id/tv_materi_content_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:textSize="16sp"
            android:text="Description" />

        <ImageView
            android:id="@+id/iv_content_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="12dp"
            app:srcCompat="@drawable/baseline_check_circle_24" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>