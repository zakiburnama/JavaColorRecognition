<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroductionFragment">

    <ImageView
        android:id="@+id/iv_introduction_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:minHeight="48dp"
        android:src="@drawable/baseline_keyboard_backspace_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorOnBackground"
        android:contentDescription="Back button" />

    <TextView
        android:id="@+id/tv_introduction_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="70dp"
        android:text="Materi Introduction"
        android:textColor="?attr/colorOnBackground"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_introduction_tittle"
        app:layout_constraintVertical_bias="0.2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_introduction_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?attr/colorSurface"
                android:drawableEnd="@drawable/baseline_check_circle_24"
                android:drawableTint="@color/green"
                android:padding="20dp"
                android:onClick="onClick"
                android:text="Posisi dan bagian rubik"
                android:textAlignment="textStart"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/green"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_introduction_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="?attr/colorSurface"
                android:drawableEnd="@drawable/baseline_check_circle_24"
                android:padding="20dp"
                android:onClick="onClick"
                android:text="Notasi Pada Rubik"
                android:textAlignment="textStart"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                app:cornerRadius="20dp"
                app:strokeColor="?attr/colorOnSurface"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_introduction_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="?attr/colorSurface"
                android:drawableEnd="@drawable/baseline_check_circle_24"
                android:padding="20dp"
                android:onClick="onClick"
                android:text="Notasi Lanjutan"
                android:textAlignment="textStart"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                app:cornerRadius="20dp"
                app:strokeColor="?attr/colorOnSurface"
                app:strokeWidth="2dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>